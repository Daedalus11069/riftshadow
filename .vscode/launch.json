{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/code/rift",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/code/",
            "environment": [],
